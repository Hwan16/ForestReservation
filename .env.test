# 테스트 환경 환경 변수 설정

# Supabase 설정 (테스트 환경용 별도 프로젝트 사용 권장)
NEXT_PUBLIC_SUPABASE_URL=your-test-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-test-supabase-anon-key

# 데이터베이스 연결 정보 (테스트 전용 DB 사용)
DATABASE_URL=postgresql://postgres:password@localhost:5432/forest_test
# 또는 SQLite를 사용:
# DATABASE_URL=sqlite:./test/test.db

# SMS 서비스 설정 (테스트 환경에서는 실제 발송 안함)
ALIGO_KEY=test-key
ALIGO_USER_ID=test-id
SMS_SENDER=01012345678
SMS_RECEIVER=01012345678
SMS_TEST_MODE=true

# 관리자 계정 초기 설정
ADMIN_USERNAME=test_admin
ADMIN_PASSWORD=test_password

# 세션 보안 설정
SESSION_SECRET=test-session-secret

# 배포 환경 설정
NODE_ENV=test

# 테스트 서버 설정
PORT=3001
HOST=localhost
VITE_PORT=3003

# 테스트 설정
TEST_TIMEOUT=10000
SKIP_API_TESTS=false
SKIP_DB_TESTS=false 